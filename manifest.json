{
	"name": "Cite!",
	"description": "Create citations from any website",
	"version": "0.1.5",

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png"
	},

	"browser_action": {
		"default_title": "Cite!",
		"default_popup": "browser/index.html"
	},

	"web_accessible_resources": [
		"inject/*.*"
	],

	"permissions": [
		"activeTab",
		"storage",
		"downloads"
	],

	"minimum_chrome_version": "39",
	"manifest_version": 2
}
