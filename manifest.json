{
	"name": "Cite!",
	"description": "Create citations from any website",
	"version": "0.0.1",

	"browser_action": {
		"default_title": "Cite!",
		"default_popup": "browser/index.html"
	},

	"web_accessible_resources": [
		"inject/*.*"
	],

	"permissions": [
		"activeTab",
		"storage"
	],

	"minimum_chrome_version": "39",
	"manifest_version": 2
}
